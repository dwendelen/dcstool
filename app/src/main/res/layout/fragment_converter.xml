                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="60sp"
                    android:layout_weight="1"/>
            <Button
                    android:id="@+id/key23"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="60sp"
                    android:layout_weight="1"/>
            <Button
                    android:id="@+id/key24"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="60sp"
                    android:layout_weight="1"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="60sp"
                android:layout_weight="1">
            <Button
                    android:id="@+id/key31"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="60sp"
