<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ConverterFragment">

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/input22"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:textSize="30sp" android:text="oooooo"/>
    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner22"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/input22"
            android:layout_marginEnd="16dp"/>

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/output22"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:textSize="30sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner22"
            android:text="aaaaaa"/>

    <Button
            android:text="Save coordinate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/save_button22"
            app:layout_constraintTop_toBottomOf="@id/output22"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>

    <TableLayout
            android:id="@+id/keyboard22"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent">
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
            <Button
                    android:id="@+id/key11"
                    android:text="N"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="60sp"
                    android:layout_weight="1"/>
            <Button
                    android:id="@+id/key12"
                    android:text="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="60sp"
                    android:layout_weight="1"/>
            <Button
                    android:id="@+id/key13"
                    android:text="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="60sp"
                    android:layout_weight="1"/>
            <Button
                    android:id="@+id/key14"
                    android:text="3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="60sp"
                    android:layout_weight="1"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
            <Button
                    android:id="@+id/key21"
                    android:text="S"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="60sp"
                    android:layout_weight="1"/>
            <Button
                    android:id="@+id/key22"
                    android:text="4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="60sp"
                    android:layout_weight="1"/>
            <Button
                    android:id="@+id/key23"
                    android:text="5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="60sp"
                    android:layout_weight="1"/>
            <Button
                    android:id="@+id/key24"
                    android:text="6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="60sp"
                    android:layout_weight="1"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="60sp"
                android:layout_weight="1">
            <Button
                    android:id="@+id/key31"
                    android:text="&lt;"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="60sp"
                    android:layout_weight="1"/>
            <Button
                    android:id="@+id/key32"
                    android:text="7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="60sp"
                    android:layout_weight="1"/>
            <Button
                    android:id="@+id/key33"
                    android:text="8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="60sp"
                    android:layout_weight="1"/>
            <Button
                    android:id="@+id/key34"
                    android:text="9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="60sp"
                    android:layout_weight="1"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
            <Button
                    android:id="@+id/key41"
                    android:text="MODE"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            <Button
                    android:id="@+id/key42"
                    android:text="0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="60sp"
                    android:layout_weight="1"/>
            <Button
                    android:id="@+id/key43"
                    android:text="0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="60sp"
                    android:layout_weight="1"/>
            <Button
                    android:id="@+id/key44"
                    android:text="."
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="60sp"
                    android:layout_weight="1"/>
        </TableRow>
    </TableLayout>

</android.support.constraint.ConstraintLayout>